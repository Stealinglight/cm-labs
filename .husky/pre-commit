#!/bin/sh

# Run gitleaks on staged files
if command -v gitleaks >/dev/null 2>&1; then
  echo "Running gitleaks..."
  gitleaks protect --staged --verbose
  if [ $? -ne 0 ]; then
    echo "Gitleaks found secrets in staged files. Commit blocked."
    exit 1
  fi
else
  echo "Gitleaks not installed, skipping secret detection."
fi

# Run eslint on staged TypeScript files
STAGED_TS=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(ts|tsx)$' || true)
if [ -n "$STAGED_TS" ]; then
  echo "Running ESLint on staged files..."
  git diff --cached --name-only -z --diff-filter=ACM | grep -z -E '\.(ts|tsx)$' | xargs -0 npx eslint
  if [ $? -ne 0 ]; then
    echo "ESLint found errors. Commit blocked."
    exit 1
  fi
fi

echo "Pre-commit checks passed!"
